{
  "name": "energy-usage",
  "version": "1.0.0",
  "description": "Track my energy usage",
  "main": "index.js",
  "scripts": {
    "dev": "next",
    "dev:verbose": "next",
    "lint": "yarn lint:check",
    "lint:check": "prettier --check \"./**/*.{ts,tsx}\"",
    "lint:fix": "prettier --write \"./**/*.{ts,tsx}\"",
    "test": "yarn lint:fix && jest",
    "test:coverage": "jest --coverage --coverageReporters=html",
    "test:coverage:send": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "prebuild": "yarn test",
    "build": "next build",
    "deploy": "now --prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/harrymt/energy-usage.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/harrymt/energy-usage/issues"
  },
  "homepage": "https://github.com/harrymt/energy-usage#readme",
  "dependencies": {
    "@types/styled-components": "^4.1.19",
    "@zeit/next-sass": "^1.0.1",
    "next": "^9.0.5",
    "next-routes": "^1.4.2",
    "now": "^16.3.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-ga": "^2.6.0",
    "react-test-renderer": "^16.10.2",
    "styled-components": "^4.4.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.11",
    "@types/react": "^16.9.4",
    "@types/react-test-renderer": "^16.9.0",
    "jest": "^24.9.0",
    "node-sass": "^4.12.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.3"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "arrowParens": "avoid",
    "singleQuote": true
  },
  "jest": {
    "roots": [
      "<rootDir>/tests"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    }
  }
}
